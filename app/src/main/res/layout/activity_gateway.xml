<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.atvty.GatewayActivity">

    <Button
        android:id="@+id/moneyboxing"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/eight_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:text="@string/money_management"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/timeboxing"
        app:layout_constraintEnd_toEndOf="@+id/timeboxing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/timeboxing"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/timeboxing"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/eight_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:text="@string/time_management"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/moneyboxing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/moneyboxing"
        app:layout_constraintTop_toBottomOf="@+id/moneyboxing" />

</androidx.constraintlayout.widget.ConstraintLayout>